<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ui.fragment.MainFragment"
                                             android:id="@+id/constraintLayout">
    <Button
            android:text="Simple Dialog"
            android:layout_width="150dp"
            android:layout_height="wrap_content" android:id="@+id/simpleDialogButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/listDialogButton"
            app:layout_constraintVertical_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="List Dialog"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/listDialogButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/simpleDialogButton"
            app:layout_constraintBottom_toTopOf="@+id/customDialogButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Custom Dialog"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/customDialogButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/listDialogButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>